
<table class="table is-striped is-hoverable is-size-5">
  <thead>
<tr>
  <th>Date/Time</th>
  <th>Code</th>
  <th>Tempe</th>
  <th>Wind Speed</th>
  <th>Wind Direction</th>
  <th>Pressure</th>
  <th></th>
  <th></th>
</tr>
  </thead>
  <tbody>
    {{#each station.readings}}
    <tr>
      <td>
        {{date}}
      </td>
      <td>
        {{code}}
      </td>
      <td>
        {{temp}}° C
        <br>
        {{fahrenheit}}° F
      </td>
      <td>
        {{windSpeed}}km/hr
        <br> 
      {{beaufort}}
      </td>
      <td>
        {{windDirection}}°
        <br>
        {{windSpeed}}
      </td>
      <td>
        {{pressure}}hPa
      </td>
      <td>
        <a href="/station/{{../station._id}}/deletereading/{{_id}}" class="button">
          {{>icons/delete}}
        </a>
      </td>
      <td>
        <a href="/station/{{../station._id}}/editreading/{{_id}}" class="button">
          {{>icons/edit}}
        </a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
  {{> add-reading}}
